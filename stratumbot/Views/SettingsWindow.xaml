                                <Button Command="{Binding ActivateLicenseClick, UpdateSourceTrigger=PropertyChanged}" Content="{x:Static local:_.ActivtionButton}" Grid.Column="0" Height="23" Margin="0,0,5,0"/>
                                <Button Command="{Binding ExtendLicenseClick, UpdateSourceTrigger=PropertyChanged}"  Content="{x:Static local:_.RenewButton}" Grid.Column="1"  Height="23" Margin="0,0,5,0"/>
                                
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="{x:Static local:_.AboutSoftware}">
                        <StackPanel Orientation="Vertical" Margin="10,0,10,10" HorizontalAlignment="Stretch">
                            <Grid>
                                <TextBlock Text="Stratum-bot v0.3 Lite" Margin="10"/>
                            </Grid>
                            <Grid>
                                <TextBlock Text="{x:Static local:_.Copyright}" Margin="10"/>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </DockPanel>

    </Grid>
</Window>
